<%= form_for [:danhmuc ,@dmhangsx], :data => {remote: true}, :html => {:class => "form-horizontal", role: "form"} do |f| %>
    <div class="modal-body">
      <div class="row">
        <ul class="errors"></ul>
      </div>
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
          <div class="form-group">
            <label for="stt"><%= t "dmhangsx.stt" %></label>
            <%= f.text_field :stt, class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="ten"><%= t "dmhangsx.ten" %></label>
            <%= f.text_field :ten, class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="vungdialy_id"><%= t "dmhangsx.dmnhomnhangsx_id" %></label>
            <%= f.select(:dmnhomhangsx_id, Dmnhomhangsx.all.collect { |c| [c.ten, c.id] }, {:prompt => t('dmhangsx.promt')}, {:class => "form-control"}) %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">
          <i class="glyphicon glyphicon-floppy-save"></i> <%= t "save" %>
        </button>
        <%= link_to danhmuc_dmhangsxes_path, class: "btn btn-default", data: {dismiss: "modal"} do %>
            <i class="glyphicon glyphicon-chevron-left"></i> <%= t "back" %>
        <% end %>
      </div>
      <div class="col-lg-3"></div>
    </div>
<% end %>