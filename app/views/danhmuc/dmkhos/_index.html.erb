<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-hover">
  <thead>
  <tr class="alert-success">
    <th style="width: 150px;"><%= t "dmkho.stt" %></th>
    <th> <%= t('dmkho.ten') %></th>
    <th><%=  t('dmkho.dmloaikho_id') %></th>
    <td style="width: 60px;">&nbsp;</td>
  </tr>
  </thead>
  <tbody>
  <% @dmkhos.each do |dmkho| %>
      <tr>
        <td><%= dmkho.stt %></td>
        <td><%= dmkho.ten %></td>
        <td><%= dmkho.dmloaikho.ten %></td>
        <td><%= link_to edit_danhmuc_dmkho_path(dmkho), data: {remote: true}, :title => t('edit') do %>
              <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to danhmuc_dmkho_delete_path(dmkho), data: {remote: true}, :title => t('delete') do %>
              <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot id="table_paginate">
  <tr class="text-center">
    <td colspan="4">
      <%= will_paginate @dmkhos, renderer: BootstrapPagination::Rails %>
    </td>
  </tr>
  </tfoot>
</table>