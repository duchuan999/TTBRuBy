<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-hover">
  <thead>
  <tr>
    <th style="width: 150px;"><%= t "dmphieu.stt" %></th>
    <th> <%= t('dmphieu.ten') %></th>
    <th><%=  t('dmphieu.dmloaiphieu_id') %></th>
    <td style="width: 60px;">&nbsp;</td>
  </tr>
  </thead>
  <tbody>
  <% @dmphieus.each do |dmphieu| %>
      <tr>
        <td><%= dmphieu.stt %></td>
        <td><%= dmphieu.ten %></td>
        <td><%= dmphieu.dmloaiphieu.ten %></td>
        <td><%= link_to edit_danhmuc_dmphieu_path(dmphieu), data: {remote: true}, :title => t('edit') do %>
              <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to danhmuc_dmphieu_delete_path(dmphieu), data: {remote: true}, :title => t('delete') do %>
              <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  <tfoot id="table_paginate">
  <tr class="text-center">
    <td colspan="4">
      <%= will_paginate @dmphieus, renderer: BootstrapPagination::Rails %>
    </td>
  </tr>
  </tfoot>
</table>